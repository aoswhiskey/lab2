<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>web.lab2.servlets.ControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>web.lab2.servlets.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/calculate</url-pattern>
    </servlet-mapping>


    <!--    filters-->

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>web.lab2.utility.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/calculate</url-pattern>
        <url-pattern>/jsp/index.jsp</url-pattern>
    </filter-mapping>


    <!-- Обработка 404 ошибки -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/404.jsp</location>
    </error-page>

    <!-- Обработка 403 ошибки -->
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/403.jsp</location>
    </error-page>
</web-app>